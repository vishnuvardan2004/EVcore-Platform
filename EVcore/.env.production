# EVcore Frontend Production Environment Variables

# Backend API Configuration (Production)
VITE_API_URL=https://evcore-backend.vercel.app
VITE_WS_URL=wss://evcore-backend.vercel.app
VITE_UPLOAD_URL=https://evcore-backend.vercel.app/upload

# Feature Flags (Production)
VITE_ENABLE_REALTIME=true
VITE_ENABLE_UPLOAD=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# Environment
MODE=production

# Build Configuration
VITE_BUILD_DATE=${VITE_BUILD_DATE}
VITE_VERSION=${npm_package_version}

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security
VITE_ENABLE_STRICT_CSP=true
VITE_ENABLE_SOURCE_MAPS=false

# Analytics & Monitoring
VITE_ENABLE_ERROR_REPORTING=true
VITE_SENTRY_DSN=your-sentry-dsn-here
